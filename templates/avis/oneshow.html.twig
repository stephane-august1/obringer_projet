{% extends 'base.html.twig' %}

{% block title %}Avis{% endblock %}

{% block body %}
    <div class="col-4">
    <a class="btn btn-secondary" href="{{ path('home_avis') }}"><i class="fas fa-arrow-circle-left"></i> Retourner aux avis</a>
</div>
   
   <h1 class="text-center">Vos Avis</h1>
    <div class="row">
      
{% for avi in avis %}
<div class=" col-1"></div>  
<div class=" col-4">
    <table class="table">
        <tbody>
            <tr>
                <th>N°</th>
                <td>{{ avi.id }}</td>
            </tr>
            <tr>
                <th>Qualité</th>
                <td>{{ avi.qualite }}</td>
            </tr>
            <tr>
                <th>Délais</th>
                <td>{{ avi.delais }}</td>
            </tr>
            <tr>
                <th>Expertise</th>
                <td>{{ avi.expertise }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ avi.prix }}</td>
            </tr>
            <tr>
                <th>Détails</th>
                <td>{{ avi.details }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ avi.date ? avi.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Produitconcerne</th>
                <td>{{ avi.produitconcerne }}</td>
            </tr>
        </tbody>
    </table>

  <div class="row">
     
<div class="col-4">
    <a class="btn btn-primary" href="{{ path('avis_edit', {'id': avi.id}) }}"><i class="far fa-edit"></i> modifiér votre avis n° {{ avi.id }}</a></div>
     <div class="col-4">
   
</div>
    <div class="col-4">
    {{ include('avis/_delete_form.html.twig') }}
    <br><br><br>
    </div>
  </div>
  
    </div><div class=" col-1"></div> 
     {% else %}
     <div class="container"><div class="col-4"></div>
        <div class="col-4">    <tr>
                <td colspan="9">Pas d'avis !!!!!</td>
            </tr></div>
            <div class="col-4"></div>
            </div>
{% endfor %}
<br><br><br>
    </div>
    
{% endblock %}
